<%= form_with model: faction do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% faction.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% faction.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :alignment %><br>
    <%= form.text_field :alignment %>
    <% faction.errors.full_messages_for(:alignment).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.label :goal %><br>
    <%= form.text_field :goal %>
    <% faction.errors.full_messages_for(:goal).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
