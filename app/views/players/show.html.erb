<h1><%= @player.first_name %> <%= @player.last_name %></h1>
<p>Email: <%= @player.email %></p

<ul>
  <li><%= link_to "Edit Player", edit_player_path(@player) %></li>
  <li><%= link_to "Delete Player", player_path(@player), 
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
</ul>